{
  "name": "dragverse",
  "description": "Decentralized social media platform for Drag Creators and Communities",
  "version": "1.0.5-beta",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/workers/*",
    "packages/helpers/*",
    "tests"
  ],
  "scripts": {
    "build": "turbo run build --parallel",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start --parallel",
    "codegen": "turbo run codegen --parallel",
    "lint": "turbo run lint --parallel",
    "typecheck": "turbo run typecheck --parallel",
    "prepare": "husky install",
    "workers:deploy": "turbo run worker:deploy --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:test": "turbo run dev:test",
    "e2e:test": "start-server-and-test start 4783 dev:test",
    "i18n:extract": "turbo run extract",
    "mobile": "cd apps/mobile && yarn mobile:start"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "start-server-and-test": "^2.0.1",
    "ts-node": "latest",
    "turbo": "1.10.13"
  },
  "engines": {
    "node": ">=16.18.1 <=19.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
